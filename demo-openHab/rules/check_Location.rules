rule "check_Location_Switch"
	when
		Item Location_Switch changed
	then
		postUpdate(Location_Selection_In,0)

		postUpdate(Sub1_to_Logical1_Switch,OFF)
		postUpdate(Sub1_to_Logical2_Switch,OFF)

		postUpdate(Sub1_to_Led1_Switch,OFF)
		postUpdate(Sub1_to_Led2_Switch,OFF)

		postUpdate(Sub1_to_Aircon_Switch,OFF)
	end
