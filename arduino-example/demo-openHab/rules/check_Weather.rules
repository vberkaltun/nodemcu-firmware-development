rule "check_Weather_Switch"
	when
		Item Weather_Switch changed
	then
		postUpdate(Weather_Selection_In,0)

		postUpdate(Sub3_to_Logical1_Switch,OFF)
		postUpdate(Sub3_to_Logical2_Switch,OFF)

		postUpdate(Sub3_to_Led1_Switch,OFF)
		postUpdate(Sub3_to_Led2_Switch,OFF)

		postUpdate(Sub3_to_Aircon_Switch,OFF)
	end
