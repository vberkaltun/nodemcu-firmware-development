rule "reset_Aircon_Power_Switch"
	when
		Item Aircon_isConnected changed
	then
		if (Aircon_isConnected.state == OFF)
			sendNotification("vberkaltun@msn.com","Sisteminizden bir aygıt güvenle kaldırıldı!")
		else
			sendNotification("vberkaltun@msn.com","Sisteminize yeni bir aygıt eklendi!")

		sendCommand(Aircon_Power_Switch, OFF)
	end

