rule "check_Rain_Switch"
	when
		Item Rain_Switch changed
	then
		postUpdate(Rain_Selection_In,0)

		postUpdate(Sub2_to_Logical1_Switch,OFF)
		postUpdate(Sub2_to_Logical2_Switch,OFF)

		postUpdate(Sub2_to_Led1_Switch,OFF)
		postUpdate(Sub2_to_Led2_Switch,OFF)

		postUpdate(Sub2_to_Aircon_Switch,OFF)
	end
