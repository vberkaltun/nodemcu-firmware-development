rule "reset_Location_Power_Switch"
	when
		Item Location_isConnected changed
	then
		postUpdate(Location_Power_Switch,Location_isConnected.state)
		postUpdate(Location_Switch,OFF)

		if(Location_isConnected.state == OFF)
			sendNotification("vberkaltun@msn.com","Sisteminizden bir aygıt güvenle kaldırıldı!")
		else
			sendNotification("vberkaltun@msn.com","Sisteminize yeni bir aygıt bağlandı!")
	end

rule "reset_Location_Power_Switch"
	when
		Item Location_Power_Switch changed
	then
		postUpdate(Location_Switch,OFF)
	end
