rule "reset_Rain_Power_Switch"
	when
		Item Rain_isConnected changed
	then
		postUpdate(Rain_Power_Switch,Rain_isConnected.state)
		postUpdate(Rain_Switch,OFF)

		if(Rain_isConnected.state == OFF)
			sendNotification("vberkaltun@msn.com","Sisteminizden bir aygıt güvenle kaldırıldı!")
		else
			sendNotification("vberkaltun@msn.com","Sisteminize yeni bir aygıt bağlandı!")
	end

rule "reset_Rain_Power_Switch"
	when
		Item Rain_Power_Switch changed
	then
		postUpdate(Rain_Switch,OFF)
	end
